<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="fontFamily">@font/sf_book</item>
        <item name="android:fontFamily">@font/sf_book</item>
        <item name="colorAccent">#00B8A6</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:dayOfWeekBackground">@color/white</item>
        <item name="android:calendarViewShown">true</item>
        <item name="android:weekDayTextAppearance">@style/CalenderViewWeekCustomText</item>
        <item name="android:dateTextAppearance">@style/CalenderViewDayCustomText</item>
    </style>
    <style name="Widget.CalendarView.Custom" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@color/white</item>
        <item name="android:weekNumberColor">@color/white</item>
        <item name="android:calendarViewShown">true</item>
        <item name="android:showWeekNumber">true</item>
        <item name="android:weekDayTextAppearance">@style/CalenderViewWeekCustomText</item>
        <item name="android:dateTextAppearance">@style/CalenderViewDayCustomText</item>
    </style>



    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">#879EAA</item>
        <item name="fontFamily">@font/sf_book</item>
        <item name="android:fontFamily">@font/sf_book</item>
    </style>

    <style name="CalenderViewDayCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/sf_book</item>
        <item name="android:fontFamily">@font/sf_book</item>
    </style>

</resources>